{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "no-console": false,
    "trailing-comma": false,
    "quotemark": [
      true,
      "single"
    ],
    "indent": [true, "spaces", 2],
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "arrow-parens": false,
    "object-literal-sort-keys": false,
    "max-classes-per-file": false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "node_modules/*",
      "dist/*",
      "webpack.config.js"
    ]
  }
}